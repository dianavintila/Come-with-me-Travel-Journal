<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    android:layout_margin="5sp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="542dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/mv_image"
            android:layout_width="171dp"
            android:layout_height="198dp"
            android:scaleType="centerCrop"
            android:src="@drawable/mcdonalds_icon" />

        <TextView
            android:id="@+id/mv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/mv_image"
            android:fontFamily="@font/adamina"
            android:text="McDonald's"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/mv_desc"
            android:layout_width="193dp"
            android:layout_height="184dp"
            android:layout_below="@id/mv_title"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/mv_image"
            android:fontFamily="@font/adamina"
            android:padding="10dp"
            android:text="McDonald's is a fast food, limited service restaurant with more than 35,000 restaurants." />


    </RelativeLayout>
</androidx.cardview.widget.CardView>